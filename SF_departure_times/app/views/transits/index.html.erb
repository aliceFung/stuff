<!-- search form here -->
<%= render partial: 'shared/search_form' %>

<hr>

<br>
<div class="row">
  <div class="col-sm-12">
      <h3 class="text-center">
        <% if @transits  %>
          Showing <%= @transits.size %> results
          <%= "near #{@origin}" %>
        <% end %>
      </h3>
  </div>
</div>
<br>

<div class="col-md-10 col-md-offset-1">
  <!-- list all nearby results below -->
  <%= render partial: 'transit', locals: {transits: @transits} %>
</div>

  <!-- map display with result markers here -->
<%= render partial: 'shared/map_view', locals: {hash: @markers} %>
<br>


<!-- move this into partial if needed later -->
<h3>Routes</h3>
<ul>
  <% @routes.each do |route| %>
    <li>
      Enter <%= route.tag %> for <%= route.title %> route
    </li>
  <% end %>
</ul>

<h3>Stops</h3>
<ul>
  <% @stops.each do |stop| %>
    <li>
      Enter <%= stop.tag %> for <%= stop.title %> stop
    </li>
  <% end %>
</ul>

